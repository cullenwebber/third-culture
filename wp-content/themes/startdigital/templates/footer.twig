<footer class="relative text-white z-40 flex flex-col">
	<div class="container flex flex-col flex-grow justify-between gap-32 min-h-lvh pt-12 lg:pt-20 2xl:pt-24 pb-6 2xl:pb-12">
		<div class="flex flex-col gap-8 xl:gap-16">
			<div class="block-content max-w-[400px] md:max-w-[600px] xl:max-w-[800px] 2xl:max-w-[1000px] 4xl:max-w-[1300px] text-balance">
				<div class="supertitle text-paragraphLight flex flex-row items-center gap-2">
					<div class="size-2.5 bg-paragraphLight blink"></div>Thirdculture
				</div>

				{{ options.footer_content }}
			</div>
			<div class="flex flex-row gap-12">
				<div class="flex flex-col text-paragraphLight">
					<a href="mailto:{{ options.company_details.email }}">{{ options.company_details.email }}</a>
					<a href="tel:{{ options.company_details.phone }}">{{ options.company_details.phone }}</a>
				</div>
				<div class="text-paragraphLight">
					{{ options.company_details.address }}
				</div>
			</div>
		</div>

		<div class="flex flex-col items-center sm:items-start gap-4 sm:gap-6 2xl:gap-12">
			{% include 'icons/wordmark.twig' with {
				class: 'w-[65%] sm:w-full text-white '
			} %}
			<div class="flex flex-col gap-1 md:flex-row justify-between items-center text-paragraphLight is-supertitle w-full">
				<span class="">&copy; {{ 'now'|date('Y') }} ThirdCulture</span>
				<div class="flex flex-row items-center gap-2 sm:gap-4">
					<a href="/terms">Terms</a>
					<div class="size-2.5 bg-paragraphLight rounded-[1px]"></div>
					<a href="/privacy">Privacy Policy</a>
				</div>
			</div>
		</div>
	</div>
</footer>
