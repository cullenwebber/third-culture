<section id="home-about-trigger" class="w-full z-40 relative text-black">
    <div class="xl:min-h-lvh container flex flex-col justify-center gap-8 lg:gap-48 pt-20">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            {# THREEJS CONTAINER #}
            <div id="home-about" class="rounded-4 w-full self-center aspect-3/4 lg:col-start-2 relative">
                <div class="absolute left-1/2 top-1/2 -translate-y-1/2 -translate-x-1/2 text-white flex flex-row items-center justify-end gap-3 is-h7 w-fit">
                    <div class="size-2 bg-white shrink-0"></div>
                    <span class="shrink-0">
                        Impact + Growth
                    </span>
                </div>
            </div>

        </div>
        <div class="flex flex-col items-center">
            <div class="grid grid-cols-2 gap-16 max-w-[1000px] indent-16 justify-end">
                {{ post.about.content }}
                {% include "partials/button.twig" with { title: post.about.link.title, link: post.about.link.url, target: post.about.link.target } %}
            </div>
        </div>
    </div>
</section>
