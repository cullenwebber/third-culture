<section	id="home-hero"	class="fixed top-0 left-0 h-lvh w-full"></section>
<section	id="home-hero-trigger"	class="relative !pt-24 !pb-8 text-black h-lvh z-40 flex flex-col justify-end">
	<div	class="container flex flex-col items-center justify-center flex-grow gap-4 is-h7">
		{% include "icons/full-logo.twig" with { class: 'h-5 2xl:h-6' } %}
		<div	class="block-content text-center max-w-[400px] xl:max-w-[500px]">
			{{ post.hero.heading }}
		</div>
		{% include "partials/button.twig" with { title: post.about.link.title, link: post.about.link.url, target: post.about.link.target, class: '-ml-8' } %}
	</div>
	<div	class="container flex flex-col gap-8">
		<div	id="hero-logo-container"	class="w-full aspect-[501/73]"></div>
	</div>

</section>
