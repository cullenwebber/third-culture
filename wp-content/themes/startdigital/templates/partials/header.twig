<header	class="fixed top-4 sm:top-8 z-50 w-full max-w-[350px] -translate-x-1/2 left-1/2 bg-black rounded-4 p-1 flex flex-col">
	<div	class="pl-[8px] flex flex-row justify-between items-center">
		<a	href="{{ site.url }}"	rel="home"	class="flex w-fit">
			{% include 'icons/logo.twig' with { class: 'h-4 text-white'} %}
		</a>
		<button	data-menu-button	class="bg-white h-[28px] w-[30px] rounded-[3px] flex flex-col justify-center items-center group border border-white hover:bg-transparent hover:text-white transition-colors duration-300 ease-in-out">
			<div	class="h-[10px] w-[16px] flex flex-col justify-between">
				{% for _ in 1..3 %}
					<div	class="lines rounded-full w-full h-[2px] bg-black transition-colors duration-300 group-hover:bg-white"></div>
				{% endfor %}
			</div>
		</button>
	</div>
	<div	data-menu	class="overflow-hidden h-0">
		<nav	class="flex flex-col p-2 text-white min-h-0">
			{% for item in menu.get_items() %}
				<div	class="overflow-hidden">
					<a	href="{{ item.url }}"	class="nav-menu-items rounded-[2px] flex items-center gap-2 group {{ loop.last ? 'bg-white px-4 text-black text-center mb-0.5 mt-1 py-2 border border-white hover:bg-transparent hover:text-white transition-colors duration-150 ease-in-out justify-center flex-row-reverse' : 'py-3 justify-between flex-row' }} {{ loop.index <= loop.length - 2 ? 'border-dashed border-b border-white/10' : '' }} {{ item.classes | join(' ') }}">
						<div	class="relative overflow-hidden">
							<span	class="group-hover:-translate-y-full duration-500 transition-transform ease-in-out flex">
								{{ item.title }}
							</span>
							<span	class="absolute top-full left-0 group-hover:-translate-y-full duration-500 transition-transform ease-in-out">
								{{ item.title }}
							</span>
						</div>
						{% include "icons/button-arrow.twig" with { class: 'h-3 ' ~ (loop.last ? '' : 'opacity-10 group-hover:opacity-100 duration-500 transition-color ease-in-out') } %}
					</a>
				</div>
			{% endfor %}
		</nav>
	</div>
</header>
