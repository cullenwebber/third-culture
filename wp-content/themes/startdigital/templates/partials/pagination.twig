{% if posts.pagination.pages is not empty %}
	<nav
		class="flex items-center justify-center gap-6 lg:gap-12">

		{# Previous #}
		{% if posts.pagination.prev %}
			<a class="button" href="{{ posts.pagination.prev.link }}">Prev</a>
		{% else %}
			<button class="button" disabled>Prev</button>
		{% endif %}

		{# Pages #}
		<div class="max-md:hidden flex items-center gap-2">
			{% for page in posts.pagination.pages %}
				{% if page.link %}
					<a class="flex items-center justify-center size-8 duration-150" href="{{ page.link }}">{{ page.title }}</a>
				{% else %}
					<span class="flex items-center justify-center size-8 {{ page.class != 'dots' ? 'font-bold' }}">{{ page.title }}</span>
				{% endif %}
			{% endfor %}
		</div>

		{# Next #}
		{% if posts.pagination.next %}
			<a class="button" href="{{ posts.pagination.next.link }}">Next</a>
		{% else %}
			<button class="button" disabled>Next</button>
		{% endif %}
	</nav>
{% endif %}
