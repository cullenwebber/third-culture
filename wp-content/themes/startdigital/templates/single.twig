{% extends "base.twig" %}

{% block content %}
	<article class="container post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
		<h1>{{ post.title }}</h1>

		<p class="blog-author">
			<span>By</span>
			<a href="{{post.author.path}}">
				{{ post.author.name }}
			</a>
			<span>&bull;</span>
			<time datetime="{{ post.date|date('d/m/Y') }}">{{ post.date }}</time>
		</p>

		<div class="article-body">
			{{ post.content }}
		</div>
	</article>
{% endblock %}
