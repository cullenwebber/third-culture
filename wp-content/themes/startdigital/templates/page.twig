{% extends 'base.twig' %}

{% block content %}
	<section id="entire-page" class="flex flex-col !py-0">
		<section id="white-page" class="sticky top-0 left-0 h-lvh w-full pointer-events-none"></section>
		<div class="-mt-[100lvh]">
			{% for block in post.meta('page_builder') %}
				<div data-block="{{ block.acf_fc_layout }}">
					{{ include('blocks/' ~ block.acf_fc_layout ~ '.twig', ignore_missing = true) }}
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
