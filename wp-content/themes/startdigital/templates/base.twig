<!DOCTYPE html>
<!-- [if lt IE 9]><html class="no-js no-svg ie lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif] -->
<!-- [if IE 9]><html class="no-js no-svg ie ie9 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif] -->
<!-- [if gt IE 9]><! -->
<html class="no-js no-svg" {{ site.language_attributes }}>
	<!-- <![endif] -->
	{% block html_head_container %}
		{% include 'html-header.twig' %}
	{% endblock %}

	<body class="{{ body_class }} min-h-screen" data-template="base.twig">
		<a class="sr-only skip-link screen-reader-text" href="#page-content">{{ _e('Skip to content') }}</a>

		{% include 'partials/page-loader.twig' %}
		{% include 'partials/mouse-follower.twig' %}
		<div id="page-parent"
			class="overflow-hidden h-lvh w-full"
			style="clip-path: polygon(45% 50%, 55% 50%, 50% 50%, 50% 50%);">
			{% block header %}
				{% include 'partials/header.twig' %}
			{% endblock %}
			<div id="inner-parent" class="">
				<main id="page-content" class="text-navy">
					{% block content %}

					{% endblock %}
				</main>

				{% block footer %}
					{% include 'footer.twig' %}
					{{ function('wp_footer') }}
				{% endblock %}
			</div>
		</div>
	</body>
</html>
