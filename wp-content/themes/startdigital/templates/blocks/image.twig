<section class="pb-12">
    <div class="container flex flex-col items-center">
        <div class="flex flex-col gap-4 w-full max-w-[1400px]">
            <div class="flex flex-row items-center">
                <div class="size-2 bg-black rounded-[1px] shrink-0 mr-4"></div>
                <div class="block-content">
                    {{ block.title }}
                </div>
            </div>
            <div class="relative aspect-[16/9]">
                <img src="{{ get_image(block.image).src }}" alt="{{ block.image.alt }}" class="absolute inset-0 w-full h-full object-cover" />
            </div>
        </div>
    </div>
</section>
