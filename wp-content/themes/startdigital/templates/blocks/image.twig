<section class="pb-12 dark-header dark-mouse">
	<div class="container flex flex-col items-center">
		<div class="flex flex-col gap-4 w-full">
			<div class="flex flex-row items-center">
				<div class="supertitle text-paragraphDark flex flex-row items-center gap-2">
					<div class="size-2.5 bg-paragraphDark blink"></div>
					{{ block.title }}
				</div>
			</div>
			<div class="relative aspect-[16/9] overflow-hidden rounded-md">
				<img src="{{ get_image(block.image).src }}"
					alt="{{ block.image.alt }}"
					class="absolute inset-0 w-full h-full object-cover" />
			</div>
		</div>
	</div>
</section>
