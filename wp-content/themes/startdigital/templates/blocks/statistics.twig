<section class="dark-header dark-mouse">
	<div class="container lg:w-[90%] grid grid-cols-2 md:flex md:flex-row gap-12 justify-between text-navy">
		{% for statistic in block.statistics %}
			<div class="flex flex-col items-center text-center gap-1">
				<div class="block-content">
					{{ statistic.title }}
				</div>
				<p class="text-paragraphDark">
					{{ statistic.description }}
				</p>
			</div>
		{% endfor %}
	</div>
</section>
