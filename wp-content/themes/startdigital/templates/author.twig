{% extends "base.twig" %}

{% block content %}
	<div class="container mx-auto px-4 py-24 max-w-4xl">
		<div class="space-y-8">
			<div class="flex items-center space-x-6">
				{% if author.avatar %}
					<img src="{{ author.avatar }}" alt="{{ author.name }}" class="w-16 h-16 rounded-full object-cover">
				{% endif %}
				<div>
					<h1 class="text-3xl font-bold capitalize mb-2">{{ author.name }}</h1>
					{% if author.bio %}
						<p class="opacity-90">{{ author.bio }}</p>
					{% endif %}
				</div>
			</div>

			{% if posts %}
				<div class="bg-white rounded-lg shadow-sm border">
					<h2 class="text-xl font-semibold p-4 border-b">
						Latest Posts
					</h2>
					<ul class="divide-y divide-gray-200">
						{% for post in posts %}
							<li>
								<a href="{{ post.link }}" class="block p-4 transition-colors duration-150">
									<span>
										{{ post.title }}
									</span>
								</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
